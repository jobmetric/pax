{
    "name": "jobmetric/pax",
    "description": "A secure and intuitive currency exchange platform designed to facilitate seamless transactions and promote peace of mind in financial exchanges.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "jobmetric",
        "package",
        "pax",
